{
  "mcpServers": {
    "tides": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name", "tides-mcp-session",
        "-e", "ANTHROPIC_API_KEY",
        "-v", "${HOME}/Documents/TideReports:/app/reports",
        "--cpus=1",
        "--memory=2g",
        "mcp/tides:latest"
      ]
    }
  }
}